= bootstrap_form_for @enquete do |f|
  = f.error_summary

  = f.text_field :name
  
  fieldset
    legend Questions
    = f.fields_for :questions do |q|
      = q.text_field :content
      
      b choices
      = q.fields_for :choices do |c|
        = c.text_field :caption
  
  = f.form_group do
    = f.submit class: 'btn btn-primary'
